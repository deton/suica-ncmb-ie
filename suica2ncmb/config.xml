<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.deton.suicareaderapp" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>suica2ncmb</name>
    <description>
        Read Suica history and upload to NCMB mBaaS
    </description>
    <author email="deton@m1.interq.or.jp" href="http://github.com/deton/suica-ncmb-ie">
        KIHARA, Hideto
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <hook src="scripts/copyncmb.js" type="after_prepare" />
    <engine name="android" spec="^6.2.3" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.2" />
    <plugin name="io.github.deton.suicareader" spec="https://github.com/deton/cordova-plugin-suicareader" />
    <plugin name="phonegap-nfc" spec="^0.7.0" />
</widget>
